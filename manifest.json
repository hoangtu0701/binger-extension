{
  "manifest_version": 3,
  "name": "Binger",
  "version": "5.0.5",
  "description": "Watch movies together with real-time synced chat and playback.",
  "icons": {
    "128": "binger_assets/images/icon.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://phimbro.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://phimbro.com/*"
      ],
      "js": [
        "src/content/utils/helpers.js",
        "src/content/modules/state.js",
        "src/content/modules/connection.js",
        "src/content/modules/navigation.js",
        "src/content/modules/overlay-dom.js",
        "src/content/modules/theme.js",
        "src/content/modules/chatbox.js",
        "src/content/modules/room.js",
        "src/content/modules/invite.js",
        "src/content/modules/message-router.js",
        "src/content/modules/session.js",
        "src/content/modules/fullscreen.js",
        "src/content/modules/soundboard.js",
        "src/content/main.js"
      ],
      "css": [
        "src/styles/animations.css",
        "src/styles/overlay.css",
        "src/styles/buttons.css",
        "src/styles/chatbox.css",
        "src/styles/invite.css",
        "src/styles/session.css",
        "src/styles/fullscreen.css",
        "src/styles/components.css",
        "src/styles/soundboard.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "binger_assets/images/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "binger_assets/images/binge.png",
        "binger_assets/images/cam.png",
        "call_app/call.html",
        "call_app/*",
        "binger_assets/soundboard/*"
      ],
      "matches": [
        "https://phimbro.com/*"
      ]
    }
  ]
}
